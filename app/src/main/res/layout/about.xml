<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/about_tbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/main_blue"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <ImageView
                android:id="@+id/imageviewabout"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_below="@id/about_tbar"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="20dp"

                android:src="@drawable/vremialogo" />

            <TextView
                android:id="@+id/vremiabout"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/imageviewabout"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/avantgarde"
                android:gravity="center"
                android:text="Vremia"
                android:textColor="@color/black"
                android:textSize="25sp"

                />

            <TextView
                android:id="@+id/vremiabout2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vremiabout"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/calibrireg"
                android:gravity="center"
                android:padding="12dp"
                android:text="For completion of Applied Research in Computer Programming 1, and 3.
Grade 11, Information Technology in Mobile App and Web Development\n\n
STI College Marikina, April 2023 to June 2023\n\nThe Team:\nFernando Villanueva, Jr.\nKurtRussell Baybay\nJoriz Paulo Mari Lopez\nSean Emmanuel Sena\nMatt Aurelio Aguinaldo"
                android:textColor="@color/black"
                android:textSize="20sp"

                />
            <TextView
                android:id="@+id/vremiabout3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vremiabout2"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="10sp"
                android:fontFamily="@font/calibrireg"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/main_blue"
                android:text="Click here to access the Application\'s Github Repository"
                android:textSize="15sp"

                />
            <TextView
                android:id="@+id/vremiabout4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/vremiabout3"
                android:layout_centerHorizontal="true"
                android:fontFamily="@font/calibrireg"
                android:gravity="center"
                android:padding="12dp"
                android:textColor="@color/black"
                android:text="Further information about this application, it\'s source code, and documentation is available at the link above."
                android:textSize="15sp"

                />



        </RelativeLayout>
    </LinearLayout>
</ScrollView>