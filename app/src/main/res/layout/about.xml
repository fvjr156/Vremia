<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/about_tbar"
                android:layout_width="match_parent"
                android:layout_height="?attr/actionBarSize"
                android:background="@color/main_blue"
                android:elevation="4dp"
                android:theme="@style/ThemeOverlay.AppCompat.Dark.ActionBar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />

            <ImageView
                android:id="@+id/imageviewabout"
                android:layout_centerHorizontal="true"
                android:layout_width="150dp"
                android:layout_below="@id/about_tbar"
                android:layout_height="150dp"
                android:layout_marginTop="20dp"

                android:src="@drawable/vremialogo" />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/avantgarde"
                android:id="@+id/vremiabout"
                android:text="Vremia"
                android:textColor="@color/black"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/imageviewabout"
                android:gravity="center"
                android:textSize="25sp"

                />

        </RelativeLayout>
    </LinearLayout>
</ScrollView>